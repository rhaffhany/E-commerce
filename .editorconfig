# EditorConfig helps maintain consistent coding styles
# Docs: https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
quote_type = single
indent_size = 2

[*.html]
indent_size = 2

[*.scss]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
